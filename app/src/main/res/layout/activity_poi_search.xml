<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bottle.track.map.poi.PoiSearchActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_actionbar_height">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="@dimen/app_actionbar_height"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_chevron_left_black_36dp"/>
            <android.support.v7.widget.SearchView
                android:id="@+id/searchView"
                android:layout_width="0dp"
                android:layout_height="@dimen/app_input_height"
                android:layout_weight="1"
                android:layout_gravity="center"
                app:queryHint="@string/search"/>

            <TextView
                android:id="@+id/tvSearch"
                android:layout_width="@dimen/app_actionbar_height"
                android:layout_height="match_parent"
                android:gravity="center"
                style="@style/TextView_content"
                android:background="@drawable/bg_rect"
                android:text="@string/search"
                android:visibility="gone"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
