    android:layout_height="48dp">

    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_chevron_left_black_36dp"/>
